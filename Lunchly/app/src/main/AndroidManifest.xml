<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.lunchly" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
        android:screenOrientation="portrait" >

        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:label="@string/app_name" android:name=".FeedActivity"/>
        <activity android:label="@string/app_name" android:name=".PickupActivity"/>
        <activity android:label="@string/app_name" android:name=".DropoffActivity"/>
        <activity android:label="@string/app_name" android:name=".TimeSelectActivity"/>
        <activity android:label="@string/app_name" android:name=".FinalizeActivity"/>
        <activity android:label="@string/app_name" android:name=".OrdersActivity"/>
        <activity android:label="@string/app_name" android:name=".OrderDisplayActivity"/>


    </application>

</manifest>
